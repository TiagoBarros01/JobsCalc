{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base"
	],
	"plugins": [
		"import-helpers"
	],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-console": "off",
		"import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          [ "parent", "sibling", "index" ]
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
	}
}
